    span {{ 'Your actual Browser Language: ' | i18n_translate }}  {{ i18n.getBrowserLang() }}
  
  p
    span {{ 'I am a translated text.' | i18n_translate }}
  
  p
    span {{ 'Attention! I love Innotec...' | i18n_translate }}
    
