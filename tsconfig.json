{
  "compilerOptions": {
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "types": [
      "jasmine",
      "node"
    ],
    "lib": ["es2015", "dom"]
  },
  "exclude": [
    "node_modules",
    "gulp-tasks",
    "dist",
    "demo",
    "**/*.*spec.ts"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
