{
  "$schema": "./node_modules/ng-packagr/package.schema.json",
  "name": "@innotec/ngx-i18n",
  "description": "The ngx i18n tool for Angular",
  "version": "3.1.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:ssl": "ng serve --ssl --live-reload false",
    "build": "ng build",
    "build:packagr": "gulp && ng-packagr -p package.json && gulp copy-original && gulp copy-bin && find dist -type f -name '*.spec.*' -delete",
    "publish:dist": "cd ./dist && npm publish --access=public",
    "test": "gulp && gulp mocha && ng test --watch=false",
    "test:watch": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "copyglyphs": "rsync -r node_modules/workshop-glyphs src/asssets/workshop-glyphs",
    "postinstall": "node ./ng-add-pug-loader.js && node ./ng-add-markdown.js"
  },
  "pre-commit": [
    "test"
  ],
  "bin": {
    "i18n-extract": "bin/extract.js",
    "i18n-init": "bin/initModule.js",
    "i18n-poeditorimport": "bin/poeditorImport.js",
    "i18n-automaticTranslate": "bin/automaticTranslate.js"
  },
  "private": false,
  "ngPackage": {
    "lib": {
      "entryFile": "src/public_api.ts",
      "externals": {
        "@angular/material": "ng.material"
      }
    },
    "whitelistedNonPeerDependencies": [
      "."
    ]
  },
  "peerDependencies": {
    "rxjs": "^6.3.3"
  },
  "dependencies": {
    "assertthat": "^3.1.0",
    "@angular/animations": "~8.1.0",
    "@angular/cdk": "8.0.2",
    "@angular/common": "~8.1.0",
    "@angular/compiler": "~8.1.0",
    "@angular/core": "~8.1.0",
    "@angular/forms": "~8.1.0",
    "@angular/material": "~8.0.1",
    "@angular/platform-browser": "~8.1.0",
    "@angular/platform-browser-dynamic": "~8.1.0",
    "@angular/router": "~8.1.0",
    "@angularclass/hmr": "~2.1.3",
    "core-js": "^3.1.4",
    "google-translate-api": "^2.3.0",
    "lang-validate": "1.2.0",
    "ng-cli-pug-loader": "^0.2.0",
    "node-poeditor": "~1.0.7",
    "rxjs": "~6.5.2",
    "rxjs-compat": "6.5.2",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^8.0.2",
    "@angular-devkit/build-angular": "~0.800.6",
    "@angular/cli": "~8.1.0",
    "@angular/compiler-cli": "~8.1.0",
    "@angular/language-service": "~8.1.0",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.0.10",
    "@types/rx": "4.1.1",
    "apply-loader": "^2.0.0",
    "codelyzer": "~5.1.0",
    "gulp": "^3.9.1",
    "gulp-copy": "^4.0.1",
    "gulp-mocha": "^6.0.0",
    "gulp-ng-pug-to-inline": "0.0.2",
    "gulp-sass": "^4.0.2",
    "gulp-shell": "^0.6.5",
    "html-loader": "^0.5.5",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-mocha-reporter": "2.2.5",
    "markdown-loader": "5.0.0",
    "marked": "^0.6.2",
    "ng-packagr": "5.3.0",
    "pre-commit": "^1.2.2",
    "protractor": "~5.4.0",
    "pug": "^2.0.4",
    "pug-loader": "^2.4.0",
    "ts-node": "~8.3.0",
    "tsickle": "0.35.0",
    "tslint": "~5.18.0",
    "typescript": "~3.4.5"
  },
  "main": "dist/bundles/innotec-ngx-i18n.umd.js",
  "module": "dist/esm5/innotec-ngx-i18n.js",
  "es2015": "dist/esm2015/innotec-ngx-i18n.js",
  "typings": "dist/innotec-ngx-i18n.d.ts",
  "metadata": "dist/innotec-ngx-i18n.metadata.json",
  "i18nConfig": {
    "languages": [
      "de",
      "en"
    ],
    "appPath": "src/app",
    "templateExt": "pug",
    "outPath": "src/assets/locale",
    "publicPath": "/assets/locale"
  }
}
